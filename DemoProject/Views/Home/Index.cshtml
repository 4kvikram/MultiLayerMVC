@model List<VM_Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Employee Record</h1>
</div>
<div class="row justify-content-between mt-5 mb-3 container-fluid">
    <h3>Manage Driver</h3>
    <div>
        <a class="btn btn-success"  asp-action="AddEmployee" >Add Employee </a>
    </div>
</div>
<div>
    <table id="tblEmployee" class="table table-text" style="width:100%">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                   
                    <td>
                        <a class="db-list" asp-action="AddEmployee" asp-route-id="@item.Id">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        &nbsp;&nbsp;&nbsp;
                        <a class="db-list" asp-action="DeleteEmployee" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                        @*<a data-ajax="true"
                           data-ajax-confirm="Are you sure to delete?"
                           data-ajax-url='@Url.Action("DeleteDriver", "driver")?ItemId=@item.Id'
                           data-ajax-update="#DriverlistSection"
                           data-ajax-complete="DriverSave">
                            <i class="fas fa-trash"></i>
                        </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>

    $(document).ready(function () {
        $("#tblEmployee").DataTable();
    });
</script>